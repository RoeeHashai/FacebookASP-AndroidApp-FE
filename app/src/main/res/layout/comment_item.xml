<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="?attr/backgroundColor">

    <LinearLayout
        android:id="@+id/ComLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/ivComProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:cropToPadding="false"
            android:src="@drawable/account_circle_24px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvComAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/tvComContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/etComContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:textSize="8pt"
                android:visibility="gone" />
            <Button
                android:id="@+id/makeCommentChangeBT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="done"
                android:textSize="8pt"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/commentMenuBT"
        android:layout_width="42dp"
        android:layout_height="61dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/transparent"
        android:src="@drawable/more_vert_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>